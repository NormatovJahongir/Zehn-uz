generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Center {
  id          String    @id @default(cuid())
  name        String
  description String?   // API: center/settings/route.ts uchun shart
  latitude    Float?    // API: center/settings/route.ts uchun shart
  longitude   Float?    // API: center/settings/route.ts uchun shart
  address     String?   
  users       User[]
  subjects    Subject[]
  courses     Course[]
  createdAt   DateTime  @default(now())
}

model User {
  id            Int             @id @default(autoincrement())
  telegramId    String?         @unique // API: bot/route.ts uchun shart
  firstName     String?         // API: bot/route.ts uchun shart
  lastName      String?         // API: bot/route.ts uchun shart
  name          String?         
  username      String          @unique
  password      String          
  email         String?         @unique 
  phone         String?         
  role          Role            @default(STUDENT)
  
  centerId      String?         
  center        Center?         @relation(fields: [centerId], references: [id])
  
  enrollments   Enrollment[]
  attendance    Attendance[]
  results       Results[]
  reviews       Reviews[]
  notifications Notifications[]
  botState      BotState?
  payments      Payment[]
  createdAt     DateTime        @default(now())
}

model Subject {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float    @default(0)  // API: admin/stats/route.ts uchun shart
  centerId  String
  center    Center   @relation(fields: [centerId], references: [id])
  createdAt DateTime @default(now())
}

model Course {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  centerId    String?      
  center      Center?      @relation(fields: [centerId], references: [id])
  enrollments Enrollment[]
  teacherId   Int
  teacher     Teacher      @relation(fields: [teacherId], references: [id])
  attendance  Attendance[]
  results     Results[]
  reviews     Reviews[]
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  userId    Int
  courseId  Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])
}

model Teacher {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  courses Course[]
}

model Payment {
  id      Int      @id @default(autoincrement())
  userId  Int
  amount  Float
  paidAt  DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id])
}

model Attendance {
  id       Int      @id @default(autoincrement())
  userId   Int
  courseId Int
  date     DateTime
  user     User     @relation(fields: [userId], references: [id])
  course   Course   @relation(fields: [courseId], references: [id])
}

model Results {
  id       Int    @id @default(autoincrement())
  userId   Int
  courseId Int
  score    Float
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])
}

model Reviews {
  id       Int    @id @default(autoincrement())
  userId   Int
  courseId Int
  comment  String
  rating   Int
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])
}

model Notifications {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model BotState {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  state  Json
  user   User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
  TEACHER
  STUDENT
}
