model User {
  id              Int          @id @default(autoincrement())
  name            String
  email           String       @unique
  role            Role
  enrollments     Enrollment[]
  attendance      Attendance[]
  results         Results[]
  reviews         Reviews[]
  notifications   Notifications[]
  botState        BotState?
}

model Enrollment {
  id          Int    @id @default(autoincrement())
  userId      Int
  courseId    Int
  createdAt   DateTime @default(now())
  user        User @relation(fields: [userId], references: [id])
  course      Course @relation(fields: [courseId], references: [id])
}

model Teacher {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  courses     Course[]
}

model Course {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  enrollments Enrollment[]
  teacherId   Int
  teacher     Teacher       @relation(fields: [teacherId], references: [id])
}

model Payment {
  id           Int       @id @default(autoincrement())
  userId       Int
  amount       Float
  paidAt       DateTime @default(now())
  user         User      @relation(fields: [userId], references: [id])
}

model Attendance {
  id         Int      @id @default(autoincrement())
  userId     Int
  courseId   Int
  date       DateTime
  user       User      @relation(fields: [userId], references: [id])
  course     Course    @relation(fields: [courseId], references: [id])
}

model Results {
  id         Int      @id @default(autoincrement())
  userId     Int
  courseId   Int
  score      Float
  user       User      @relation(fields: [userId], references: [id])
  course     Course    @relation(fields: [courseId], references: [id])
}

model Reviews {
  id          Int      @id @default(autoincrement())
  userId      Int
  courseId    Int
  comment      String
  rating      Int  // Assuming a rating system
  user        User     @relation(fields: [userId], references: [id])
  course      Course    @relation(fields: [courseId], references: [id])
}

model Notifications {
  id         Int      @id @default(autoincrement())
  userId     Int
  content    String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model BotState {
  id         Int      @id @default(autoincrement())
  userId     Int
  state      Json
  user       User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}