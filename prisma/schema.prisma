// 1. Prisma Client generatori
generator client {
  provider = "prisma-client-js"
}

// 2. Ma'lumotlar bazasi ulanishi
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 3. Modellar
model User {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  role          Role
  centerId      Int?            // API kodingiz uchun kerak
  enrollments   Enrollment[]
  attendance    Attendance[]
  results       Results[]
  reviews       Reviews[]
  notifications Notifications[]
  botState      BotState?
  payments      Payment[]
}

// YANGI: API kodingiz ushbu modelni findMany() qilmoqda
model Subject {
  id        Int      @id @default(autoincrement())
  name      String
  centerId  Int
  createdAt DateTime @default(now())
}

model Enrollment {
  id        Int      @id @default(autoincrement())
  userId    Int
  courseId  Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])
}

model Teacher {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  courses Course[]
}

model Course {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  centerId    Int?         // API kodingiz uchun ehtimoliy kerakli maydon
  enrollments Enrollment[]
  teacherId   Int
  teacher     Teacher      @relation(fields: [teacherId], references: [id])
  attendance  Attendance[]
  results     Results[]
  reviews     Reviews[]
}

model Payment {
  id      Int      @id @default(autoincrement())
  userId  Int
  amount  Float
  paidAt  DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id])
}

model Attendance {
  id       Int      @id @default(autoincrement())
  userId   Int
  courseId Int
  date     DateTime
  user     User     @relation(fields: [userId], references: [id])
  course   Course   @relation(fields: [courseId], references: [id])
}

model Results {
  id       Int    @id @default(autoincrement())
  userId   Int
  courseId Int
  score    Float
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])
}

model Reviews {
  id       Int    @id @default(autoincrement())
  userId   Int
  courseId Int
  comment  String
  rating   Int
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])
}

model Notifications {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model BotState {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  state  Json
  user   User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
  TEACHER  // API kodingizda 'TEACHER' roli ishlatilgan
  STUDENT  // API kodingizda 'STUDENT' roli ishlatilgan
}
